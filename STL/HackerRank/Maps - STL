#include <bits/stdc++.h>
using namespace std;
int main() 
{
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    map<string,int>mp;
    int n,m;
    string s;
    int t; cin>>t;
    while(t--)
    {
        cin>>n>>s;
        if(n==1) 
        {
            cin>>m;
            mp[s]+=m;
        }
        else 
        {
            if(n==2) mp[s]=0;
            else cout<<mp[s]<<'\n';
        }
    }
    return 0;
}
